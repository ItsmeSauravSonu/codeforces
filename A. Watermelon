import java.util.Scanner;
 
public class cf1 {
 
	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Scanner scn = new Scanner(System.in);
        int n = scn.nextInt();
        if(n%2==0 && n!=2) {
        	System.out.println("YES");
        }
        else {
        	System.out.println("NO");
        }
	}
 
}
